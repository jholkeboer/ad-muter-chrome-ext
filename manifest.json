{
  "manifest_version": 2,

  "name": "Ad Muter",
  "description": "Takes screenshots",
  "version": "1.0",

  "browser_action": {
    // "default_icon": "camera.png",
    "default_title": "Screenshot"
  },

  "permissions": [
    "activeTab",
    "<all_urls>",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  }
}